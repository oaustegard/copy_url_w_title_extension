{
    "manifest_version": 3,
    "name": "Copy URL and Title",
    "version": "1.0",
    "description": "Copies the current page's URL and title to the clipboard in rich text and Markdown formats.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/CopyUrl.png"
    },
    "icons": {
      "16": "icons/CopyUrl.png",
      "48": "icons/CopyUrl.png",
      "128": "icons/CopyUrl.png"
    }
  }
  